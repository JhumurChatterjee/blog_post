<div class="mt-3 mb-4">
  <%= form_for comment, remote: true do |f| %>
    <%= f.hidden_field :commentable_id %>
    <%= f.hidden_field :commentable_type %>

    <div class="form-group">
      <%= f.text_area :body, class: "form-control", required: true, placeholder: "Write your comment here...", rows: 2 %>
    </div>

    <div class="form-group">
      <%= f.submit "Comment", class: "btn btn-primary", data: { disable_with: "Saving..." } %>
    </div>
  <% end %>
</div>
